<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/v"></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/v"
        android:background="@drawable/white_background">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="15dp"
            android:id="@+id/restrict_popup_text"
            android:layout_margin="10dp"
            android:textAlignment="center"
            android:text="@string/restrict_pop"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:weightSum="2"
            android:background="@color/login_bg"
            android:layout_height="50dp">
            <RelativeLayout
                android:layout_width="0dp"
                android:id="@+id/cancel"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CANCEL"
                    android:layout_centerInParent="true"
                    android:textSize="16dp"
                    android:textColor="@color/white"
                    android:textAlignment="center"/>
            </RelativeLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"></View>
            <RelativeLayout
                android:layout_width="0dp"
                android:id="@+id/allow_restrict"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RESTRICT"
                    android:layout_centerInParent="true"
                    android:textSize="16dp"
                    android:textColor="@color/white"
                    android:textAlignment="center"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    <ImageView
        android:layout_width="140dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/re_post"
        android:layout_marginTop="10dp"
        android:background="@drawable/restricted"
        android:layout_height="140dp" />

</RelativeLayout>
