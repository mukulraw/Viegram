<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sign_up_background1"
    android:orientation="vertical"
    android:weightSum="10"
    tools:ignore="Overdraw">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8" >
        <RelativeLayout
            android:layout_width="60dp"
            android:id="@+id/back"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_centerInParent="true"
                android:background="@drawable/backbutton_96"/>
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.8"
        android:background="@drawable/sign_up" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6.8">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@drawable/signup_white_background"
            android:orientation="vertical"
            android:weightSum="6">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/i"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/name_96" />

                <com.relinns.viegram.util.EditText_cursor
                    android:id="@+id/sign_upName"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="25dp"
                    android:layout_toRightOf="@+id/i"
                    android:background="@null"
                    android:hint="Name"
                    android:textColorHint="@color/stroke"
                    android:singleLine="true"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    tools:ignore="Deprecated" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1.2dp"
                    android:layout_below="@id/i"
                    android:layout_marginTop="1.5dp"
                    android:background="@color/stroke"></LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/i1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/name_96" />

                <com.relinns.viegram.util.EditText_cursor
                    android:id="@+id/userName_signUp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_margin="5dp"
                    android:layout_toLeftOf="@+id/display_progress"
                    android:layout_toRightOf="@+id/i1"
                    android:background="@null"
                    android:textColorHint="@color/stroke"
                    android:hint="Display Name"
                    android:singleLine="true"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    tools:ignore="Deprecated" />

                <ProgressBar
                    android:id="@+id/display_progress"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:visibility="invisible" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.2dp"
                    android:layout_below="@id/i1"
                    android:layout_marginTop="1.5dp"
                    android:background="@color/stroke"></View>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/i2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/country_96" />

                <AutoCompleteTextView
                    android:id="@+id/country_signUp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="25dp"
                    android:layout_toRightOf="@id/i2"
                    android:background="@null"
                    android:hint="Country"
                    android:textColorHint="@color/stroke"
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    tools:ignore="Deprecated" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.2dp"
                    android:layout_below="@id/i2"
                    android:layout_marginTop="1.5dp"
                    android:background="@color/stroke"></View>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/i3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/mail_96" />

                <com.relinns.viegram.util.EditText_cursor
                    android:id="@+id/email_signup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/email_progress"
                    android:layout_toRightOf="@+id/i3"
                    android:background="@null"
                    android:hint="Email"
                    android:textColorHint="@color/stroke"
                    android:inputType="textEmailAddress"
                    android:singleLine="true"
                    android:textAlignment="center"
                    tools:ignore="Deprecated" />

                <ProgressBar
                    android:id="@+id/email_progress"
                    android:layout_width="20dp"
                    android:visibility="invisible"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.2dp"
                    android:layout_below="@id/i3"
                    android:layout_marginTop="1.5dp"
                    android:background="@color/stroke"></View>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/i4"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"

                    android:background="@drawable/password_96" />

                <com.relinns.viegram.util.EditText_cursor
                    android:id="@+id/password_signUp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="25dp"
                    android:layout_toRightOf="@id/i4"
                    android:background="@null"
                    android:hint="Password"
                    android:password="true"
                    android:textColorHint="@color/stroke"
                    android:singleLine="true"
                    android:textAlignment="center"
                    tools:ignore="Deprecated" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.2dp"
                    android:layout_below="@id/i4"
                    android:layout_marginTop="1.5dp"
                    android:background="@color/stroke"></View>
            </RelativeLayout>


        </LinearLayout>

        <Button
            android:id="@+id/signup_"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/login_bg"
            android:text="Sign Up"
            android:textColor="@color/white" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        android:layout_weight="1."
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.3"
            android:text="By Signing up you agree to our "
            android:textAlignment="viewEnd"
            android:textColor="@color/white"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/terms_o_s"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="3dp"
            android:layout_weight="0.7"
            android:text="Terms of Service"
            android:textColor="@color/white"
            android:textSize="14dp" />
    </LinearLayout>

</LinearLayout>
